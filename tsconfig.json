{
  "compilerOptions": {
    "isolatedModules": true,
    "outDir": "./dist",
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["@cloudflare/workers-types"]
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "dist/"]
}
